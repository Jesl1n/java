package preparations_02_06_2024;

import java.util.Scanner;

public class triangle_6 {
	public static void main(String[] args) {
		/*
		       *****
                        ****
                         ***
                          **
                           *
		 */
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter your Number: ");
		int n = sc.nextInt();
		for (int x = 1; x <= n; x++) {
			for (int y = x; y <= n; y++) {
				System.out.print("*");
			}

			System.out.println();
			for (int z = 1; z <= x; z++) {
				System.out.print(" ");
			}
		}

	}
}


