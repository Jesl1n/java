package preparations_02_06_2024;

import java.util.Scanner;

public class triangle_4 {
	public static void main(String[] args) {
		/*
		 
		    *
		   **
		  ***
		 ****
		*****
		
		 */
		Scanner sc = new Scanner(System.in);
		System.out.print("Enter your numbers: ");
		int n = sc.nextInt();
		for (int x = 1; x <= n; x++) {
			for (int y = n; y > x; y--) {
				System.out.print(" ");
			}
			for (int z = 1; z <= x; z++) {
				System.out.print("*");
			}
			System.out.println();
		}
	}
}


