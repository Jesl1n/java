	    	* * * * * 
                * * * * * 
                * * * * * 
                * * * * * 
                * * * * * 
		 */
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter your Number: ");
		int n = sc.nextInt();
		for (int x = 1; x <= n; x++) {
			for (int y = 1; y <= n; y++) {
				System.out.print("*" + " ");
			}
			System.out.println();
		}

	}
}


